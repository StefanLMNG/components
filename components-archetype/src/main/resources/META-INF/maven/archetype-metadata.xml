<?xml version="1.0" encoding="UTF-8"?>
<archetype-descriptor name="basic">

    <requiredProperties>
        <requiredProperty key="component-name">
            <defaultValue>${artifactId}</defaultValue>
        </requiredProperty>
        <requiredProperty key="componentClass">
            <defaultValue>${component-name.substring(0,1).toUpperCase()}${component-name.substring(1)}</defaultValue>
        </requiredProperty>
        <requiredProperty key="package">
            <defaultValue>${groupId}</defaultValue>
        </requiredProperty>
        <requiredProperty key="packageTalend">
            <defaultValue>org.talend.components</defaultValue>
        </requiredProperty>
        <!--<requiredProperty key="resource-name">
            <defaultValue>Resource-default</defaultValue>
        </requiredProperty>-->

        <!--JUnit version to use in generated project
        <requiredProperty key="junit-version">
            <defaultValue>4.10</defaultValue>
        </requiredProperty>-->
    </requiredProperties>

    <fileSets>
        <!-- Metadata for src module -->    


 <!-- Metadata for runtime module -->
        <fileSet filtered="true" packaged="true">
            <directory>__artifactId__-runtime_XXX/src/main/java/</directory>
            <includes>
                <include>**/*.java</include>
            </includes>
        </fileSet>

        <fileSet filtered="true" packaged="true">
                <directory>__artifactId__-runtime_XXX/src/main/resources/</directory>
        </fileSet>
        <fileSet filtered="true">
            <directory>__artifactId__-runtime_XXX</directory>
            <includes>
                <include>pom.xml</include>
            </includes>
        </fileSet>

        <!-- Metadata for definition module -->
        <fileSet filtered="true" packaged="true">
            <directory>__artifactId__-definition/src/main/java/</directory>
            <includes>
                <include>**/*.java</include>
            </includes>
        </fileSet>

        <fileSet filtered="true" packaged="true">
                <directory>__artifactId__-definition/src/main/resources/</directory>
        </fileSet>
        <fileSet filtered="true">
            <directory>__artifactId__-definition</directory>
            <includes>
                <include>pom.xml</include>
            </includes>
        </fileSet>

       

        <!--<fileSet filtered="true" encoding="UTF-8">
            <directory>src/test/resources</directory>
            <includes>
                <include>**/*.*</include>
            </includes>
        </fileSet> -->
         <!--<fileSet filtered="true" packaged="true">
                    <directory>components-test/src/main/java</directory>
         </fileSet>   -->    	
    </fileSets> 
