	<profiles>
		<profile>
			<id>docker</id>
			<activation>
				<activeByDefault>false</activeByDefault>
			</activation>
			<build>
				<plugins>
					<plugin>
						<groupId>io.fabric8</groupId>
						<artifactId>docker-maven-plugin</artifactId>
						<version>0.15.1</version>
						<executions>
							<execution>
								<id>start</id>
								<phase>pre-integration-test</phase>
								<goals>
									<goal>build</goal>
								</goals>
								<configuration>
									<registry>${talend_docker_registry}</registry>
									<images>
										<image>
											<name>${talend_docker_registry}/talend/tcomp-${project.artifactId}-${git_branch}</name>
											<build>
												<from>${talend_docker_registry}/talend/java:1.8u72-alpine</from>
												<tags>
													<tag>${docker.version}</tag>
												</tags>
												<ports>
													<port>8080</port>
												</ports>
												<entryPoint>
													<!-- exec form for ENTRYPOINT -->
													<exec>
														<arg>java</arg>
														<arg>-Dfile.encoding=UTF-8</arg>
														<arg>-jar</arg>
														<arg>/maven/${project.build.finalName}.jar</arg>
													</exec>
												</entryPoint>
												<assembly><!-- includes the artifact generated by the current 
														pom -->
													<descriptorRef>artifact</descriptorRef>
												</assembly>
											</build>
										</image>
									</images>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
		<profile>
			<id>full-install</id>
			<activation>
				<activeByDefault>false</activeByDefault>
			</activation>
			<build>
				<plugins>
					<plugin>
						<artifactId>maven-invoker-plugin</artifactId>
						<version>2.0.0-TALEND</version>
						<configuration>
							<localRepositoryPath>target/local-repo</localRepositoryPath>
							<skipTestScopeForExtraArtifacts>true</skipTestScopeForExtraArtifacts>
						</configuration>
						<executions>
							<execution>
								<id>generate-maven-repo</id>
								<goals>
									<goal>install</goal>
								</goals>
								<configuration>
                                    <extraArtifacts>
                                        <extraArtifact>org.talend.components:components-salesforce:0.17.0-SNAPSHOT:jar</extraArtifact>
                                        <extraArtifact>org.talend.components:components-jdbc-runtime:0.17.0-SNAPSHOT:jar</extraArtifact>
                                        <extraArtifact>org.talend.components:components-jira:0.17.0-SNAPSHOT:jar</extraArtifact>
                                        <extraArtifact>org.talend.components:jsm-runtime:0.17.0-SNAPSHOT:jar</extraArtifact>
                                        <extraArtifact>org.talend.components:kafka-runtime:0.17.0-SNAPSHOT:jar</extraArtifact>
                                    </extraArtifacts>
								</configuration>
							</execution>

						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>


	</profiles>





	<build>
		<plugins>
			<plugin>
				<groupId>org.springframework.boot</groupId>
				<artifactId>spring-boot-maven-plugin</artifactId>
				<version>${spring.boot.version}</version>
				<configuration>
					<mainClass>org.talend.components.service.rest.Application</mainClass>
				</configuration>
				<executions>
					<execution>
						<id>make-standalone-jar</id>
						<goals>
							<goal>repackage</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
